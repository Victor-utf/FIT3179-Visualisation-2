{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 400,
  "height": 300,
  "title": "Country revenues",
  "data": {
    "url": "https://raw.githubusercontent.com/Victor-utf/FIT3179-Visualisation-2/main/data/Fortune%20500%20Global%20List%202020_Someka_V1_pureData.csv"
  },
  "transform": [
    {
      "aggregate": [{
        "op": "sum",
        "field": "Revenues",
        "as": "newRevenue"
      }],
      "groupby": ["Country"]
    },
    {
      "lookup": "Country",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Victor-utf/FIT3179-Visualisation-2/main/data/Count_by_country.csv"
         },
         "key": "Country",
         "fields": ["Continent"]
       }
    }
  ],
  "mark": {"type": "rect"},
  "encoding": {
    "size": {"value": 100},
    "y": {
      "field": "Country", 
      "type": "nominal", 
      "sort": "-x",
      "axis": {"position": 1}
    },
    "x": {
      "field": "newRevenue",
      "type": "quantitative",
      "axis": {"tickCount": 4},
      "scale": {"type": "log", "domain": [10000, 100000000]},
      "title": "Total Revenue"
    },
    "color": {
      "field": "Continent",
      "type": "nominal",
      "scale": {
        "domain": [
          "North America",
          "South America",
          "Asia",
          "Europe",
          "Oceania",
          "Middle East"
        ],
        "range": [
          "#66dd99",
          "#fc8d62",
          "#8da0cb",
          "#aa5555",
          "#cc55cc",
          "#777777"
        ]
        },
      "legend": {
        "orient": "none",
        "legendX": 620,
        "legendY": 300
      }
      },
      "tooltip": [
        {"field": "Country", "type": "nominal", "title": "Country"},
        {"field": "newRevenue", "type": "quantitative", "title": "Total Revenue"},
        {"field": "Continent", "type": "nominal", "title": "Continent"}
      ]
    } 
}
