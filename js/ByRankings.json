{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "Revenues, profits and assets by rank",
  "data": {
    "url": "https://raw.githubusercontent.com/Victor-utf/FIT3179-Visualisation-2/main/data/Fortune%20500%20Global%20List%202020_Someka_V1_pureData.csv"
  },
  "transform": [{"calculate": "datum.Rank/1", "as": "R2"}],
  "resolve": {
    "scale": {"color": "shared"},
    "legend": {"color": "shared"}
  },
  "encoding": {
    "x": {
      "field": "R2", "type": "ordinal", "title": "Rank", "scale": {"type": "linear", "range": [10, 790]}
    }
  },
  "layer": [
    {
      "mark": {"type": "line", "point": true},
      "encoding": {
        "y": {
          "field": "Assets", "type": "quantitative", "title": "Values"
        },
        "color": {"value": "#fd8d3c"},

        "tooltip": [
          {"field": "Company Name", "type": "nominal", "title": "Company"},
          {"field": "Rank", "type": "quantitative", "title": "Rank"},
          {"field": "Values", "type": "quantitative", "title": "Revenue"}
        ]
      }
    },
    {
      "mark": {"type": "line", "point": true},
      "encoding": {
        "y": {
          "field": "Revenues", "type": "quantitative", "title": "Values"
        },
        "color": {"value": "#1f77b4"},
        "tooltip": [
          {"field": "Company Name", "type": "nominal", "title": "Company"},
          {"field": "Rank", "type": "quantitative", "title": "Rank"},
          {"field": "Revenues", "type": "quantitative", "title": "Revenue"}
        ]
      }
    },
    {
      "mark": {"type": "line", "point": true},
      "encoding": {
        "y": {
          "field": "Profits", "type": "quantitative", "title": "Values"
        },
        "color": {"value": "#1e9b77"},
        "tooltip": [
          {"field": "Company Name", "type": "nominal", "title": "Company"},
          {"field": "Rank", "type": "quantitative", "title": "Rank"},
          {"field": "Values", "type": "quantitative", "title": "Revenue"}
        ]
      }
    }
  ] 
}
