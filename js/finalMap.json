{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Map of Fortune 500 companies",
  "width": 800,
  "height": 600,
  "projection": {"type": "equirectangular"},
  "data": {
    "url": "https://raw.githubusercontent.com/Victor-utf/FIT3179-Visualisation-2/main/worldMap.geo.json",
    "format": {"type": "topojson", "feature": "custom"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Victor-utf/FIT3179-Visualisation-2/main/data/Count_by_country.csv"
         },
         "key": "Country",
         "fields": ["Population"]
       }
    },
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Victor-utf/FIT3179-Visualisation-2/main/Fortune%20500%20Global%20List%202020_Someka_V1_pureData.csv"
         },
         "key": "Country",
         "fields": ["Revenues"]
       }
    }
  ],
   "mark": {"type": "geoshape"},
   "encoding": {
      "color": {
        "condition": {"test": "datum['Revenues'] > 0", "field": "Revenues"},
        "value": "grey"
      },
      "tooltip" : [
        {"field": "properties.name", "type": "nominal", "title": "Country"},
        {"field": "Number_of_employees", "type": "quantitative"}
      ]
   }
}
